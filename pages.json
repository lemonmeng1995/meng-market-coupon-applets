{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index"
		}, {
			"path": "pages/web-view/index"
		},
		{
			"path": "pages/h5-openid-view/index"
		},
		{
			"path": "pages/loading/loading"
		}
	],
	"subPackages": [{
		"root": "user",
		"pages": [{
				"path": "quan/quan",
				"style": {
					"navigationBarTitleText": "我的卡券"
				}
			},
			{
				"path": "entrance/entrance",
				"style": {
					"navigationBarTitleText": "登录",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "agreement/agreement",
				"style": {
					"navigationBarTitleText": "用户协议"
				}
			}
		]
	}, {
		"root": "detail",
		"pages": [{
				"path": "detailPages/detailIndex/detailIndex",
				"style": {
					"navigationBarTitleText": "券详情"
				}
			},
			{
				"path": "shop/shop",
				"style": {
					"navigationBarTitleText": "我的门店"
				}
			},
			{
				"path": "strategy/strategy",
				"style": {
					"navigationBarTitleText": "活动攻略"
				}
			}
		]
	}, {
		"root": "custom",
		"pages": [{
			"path": "customIndex/customIndex"
		}, {
			"path": "custompageA/custompageA"
		}]
	}],
	"preloadRule": {
		"user/agreement/agreement": {
			"network": "all",
			"packages": ["user"]
		},
		"detail/detailPages/detailIndex/detailIndex": {
			"network": "all",
			"packages": ["detail"]
		},
		"custom/custompageA/custompageA": {
			"network": "all",
			"packages": ["custom"]
		},
		"custom/customIndex/customIndex": {
			"network": "all",
			"packages": ["custom"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "光想着你",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"permission": {
		"scope.userLocation": {
			"desc": "你的位置信息将用于小程序位置接口的效果展示"
		}
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "首页", //模式名称
			"path": "pages/index/index", //启动页面，必选
			"query": "" //启动参数，在页面的onLoad函数里面得到
		}]
	}
}
